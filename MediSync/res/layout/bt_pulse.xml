<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.sorin.medisync.pulse.PulseGraphView
        android:id="@+id/pulse_graph"
        android:layout_width="fill_parent"
        android:layout_height="248dp"
        android:layout_weight="0.38" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.47"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/pulse_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="60dp"
            android:src="@drawable/ic_pulse" />

        <TextView
            android:id="@+id/pulse_value"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pulse_image"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/pulse_image"
            android:gravity="center"
            android:text="@string/pulse_measurement"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>